@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
        <li class="nav-item">
            <a id="manage" class="nav-link " style="color: white;" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Salut @UserManager.GetUserName(User)!</a>

        </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" style="color: white;" class="nav-link btn btn rounded-pill px-4">Se Deconnecter</button>
        </form>
    </li>
}
else
    {
        <li class="nav-item">
            <a class="nav-link rounded-pill px-4" style="color: white;" id="Register" asp-area="Identity" asp-page="/Account/Register">S'inscrire</a>
    </li>
    <li class="nav-item">
            <a class="nav-link rounded-pill px-4" style="color: white;" id="Login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
    </li>
}
</ul>
