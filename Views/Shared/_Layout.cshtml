<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Reservation</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Reservation.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/x-icon" href="~/lib/WhatsApp-Image-2025-03-14-at-01.54.37.ico" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg shadow-sm" style="margin-bottom: 0; padding-bottom: 0;" id="navbar">
            <div class="container-fluid" style="
                display: grid;
                grid-template-columns: 1fr auto auto 1fr;
                grid-template-rows: auto auto;
                gap: 0.5rem;
                align-items: center;
                padding-right: 0;
            ">
                <div style="grid-area: 1 / 1 / 3 / 3; display: flex; align-items: center;">
                    <button class="navbar-toggler d-lg-none" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                </div>
                <div style="grid-area: 1 / 2 / 3 / 3; display: flex; align-items: center;">
                    <a class="navbar-brand d-none d-lg-block" href="#">
                        <img src="./assets/logo.png" alt="Royal Air Maroc" width="120">
                    </a>
                </div>
                <div style="grid-area: 1 / 3 / 2 / 4; display: flex; align-items: center; gap: 1rem;">
                    <div class="collapse navbar-collapse" id="basic-navbar-nav">
                        
                        <ul class="navbar-nav me-4">
                            <li class="nav-item">
                                <a class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link  " asp-controller="Reservations" asp-action="IndexByClient" asp-route-clientId="2">Mes réservations</a>
                                </li>
                            }


                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link  " asp-area="" asp-controller="Vol" asp-action="Index1">Gérer les vols</a>
                                </li>
                            }

                            @if (User.IsInRole("Client"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link  " asp-area="" asp-controller="Vol" asp-action="Index2">Consulter les vols</a>
                                </li>
                            }

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link  " asp-area="" asp-controller="Client" asp-action="Index">Clients</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link  " asp-area="" asp-controller="Vol" asp-action="Index">addreservation</a>
                            </li>
                        </ul>
                        
                        <div style="border: 2px solid #dee2e6; border-radius: 50px; padding: 0.25rem 1rem;">
                            <form class="d-flex">
                                <input class="form-control border-0" type="search" placeholder="Rechercher">
                                <button class="btn btn-outline-primary" type="button">Rechercher</button>
                            </form>
                        </div>
                    </div>
                </div>

                <div class="d-none d-lg-block" style="
                    grid-area: 2 / 3 / 3 / 5;
                    display: flex;
                    align-items: center;
                    background: var(--bs-primary);
                    padding-bottom: 0.8rem;
                    padding-top: 0.4rem;
                ">
                    <partial name="_LoginPartial" />
                </div>

                <button class="d-lg-none" style="
                    grid-area: 1 / 4;
                    justify-self: end;
                    background: none;
                    border: none;
                    padding: 0;
                " onclick="showProfile()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="30" height="30" fill="white" viewBox="0 0 16 16">
                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z" />
                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z" />
                    </svg>
                </button>
            </div>
        </nav>
       
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Reservation - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
