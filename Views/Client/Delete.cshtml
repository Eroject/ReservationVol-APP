@model Client

<h1>Suppression d'un client</h1>
<h1></h1>
<h1></h1>

<form method="post">
    <div class="mb-3 row">
        <label asp-for="Nom" class="col-form-label"></label>
        <input asp-for="Nom" class="form-control" readonly />
    </div>

    <div class="mb-3 row">
        <label asp-for="Prenom" class="col-form-label"></label>
        <input asp-for="Prenom" class="form-control" readonly />
    </div>

    <div class="mb-3 row">
        <label asp-for="CIN" class="col-form-label"></label>
        <input asp-for="CIN" class="form-control" readonly />
    </div>

    <div class="mb-3 row">
        <label asp-for="Age" class="col-form-label"></label>
        <textarea asp-for="Age" class="form-control" readonly></textarea>
    </div>

    
    <button type="submit" class="btn btn-danger form-control">Supprimer Client</button>
    <a asp-controller="Client" asp-action="Index" class="btn btn-outline-secondary form-control">Retour à la liste</a>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
