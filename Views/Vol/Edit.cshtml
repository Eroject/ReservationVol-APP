@model Vol
<h1>Modification d'un vol</h1>
<h1></h1>
<h1></h1>

<form method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Depart"></label>
        <input asp-for="Depart" class="form-control" />
        <span asp-validation-for="Depart" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="DateArrivee"></label>
        <input asp-for="DateArrivee" class="form-control" />
        <span asp-validation-for="DateArrivee" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Prix"></label>
        <textarea asp-for="Prix" class="form-control"></textarea>
        <span asp-validation-for="Prix" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NombrePlacesMax"></label>
        <textarea asp-for="NombrePlacesMax" class="form-control"></textarea>
        <span asp-validation-for="NombrePlacesMax" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PlacesDisponibles"></label>
        <textarea asp-for="PlacesDisponibles" class="form-control"></textarea>
        <span asp-validation-for="PlacesDisponibles" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary form-control">Modifier Vol</button>
    <a asp-controller="Vol" asp-action="Index" class="btn btn-outline-secondary form-control">Retour à la liste</a>
</form>

@section Scripts {
@* Validation côté client *@
    <partial name="_ValidationScriptsPartial" />
}
